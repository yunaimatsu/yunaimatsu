---
import Column from './Footer__column.astro';
import { footer__data } from './data/footerData.ts';
---

<footer>
  {footer__data.map((section) => (
    <Column 
      title={section.title}
      title__url={section.title__url}
      items={section.items}
      item_url={section.item_url}
    />
  ))}
</footer>

<style>
  @import './styles/_global.scss';
  footer {
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* 3 equal columns */
    gap: 5%; /* space between columns */

    border-top: 1px solid var(--border-color);
    background-color: var(--bg-color-d);

    padding-top: 4rem;
    padding-bottom: 4rem;
    padding-right: var(--side-space);
    padding-left: var(--side-space);

    color: var(--font-color-d);
  }

  a {
    color: var(--font-color-d);
		text-decoration: none;
	}
</style>