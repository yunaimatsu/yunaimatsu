---
interface Props {
  title: string;
  content: string;
  link: string;
  image: string;
  imageAlt: string;
}

const { title, content, link, image, imageAlt } = Astro.props as Props;
---

<section>
  <h2>{title || 'Default Title'}</h2>
  <p>{content || 'Default content goes here.'}</p>
  <a href={link || '#'} aria-label={`Learn more about ${title}`} target="_blank" rel="noopener noreferrer">
    Learn more
  </a>
  <img src={image || '/default-image.jpg'} alt={imageAlt || 'Default image description'} loading="lazy" />
</section>